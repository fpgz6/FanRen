<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/bg_login"
    android:layout_height="match_parent">
    <com.fanren.www.ui.customview.TitleBar
        android:id="@+id/titleBar_findPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"></com.fanren.www.ui.customview.TitleBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <EditText
            android:id="@+id/ed_phone_nub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_white"
            android:layout_marginRight="40dp"
            android:hint="@string/string_input_hint_phone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_white"
            android:layout_marginRight="40dp"
            android:hint="@string/string_input_code"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:text="@string/get_phone_code"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_login"
        android:gravity="center"
        android:textSize="19sp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:padding="10dp"
        android:textColor="@color/color_white"
        android:layout_marginTop="20dp"
        android:text="@string/string_reset_password"/>
</LinearLayout>